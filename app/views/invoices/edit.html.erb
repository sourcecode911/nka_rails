<h3>Betriebskosten</h3>

<% if notice %>
    <div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<hr/>

<%= form_for @invoice, url: invoice_path do |f| %>

    <%= react_component('PriceInput', {label: 'Erdgaskosten', model: 'invoice', attr: 'erdgas', value: @invoice.erdgas}) %>
    <%= react_component('PriceInput', {label: 'Kaminfeger', model: 'invoice', attr: 'kamin', value: @invoice.kamin}) %>
    <%= react_component('PriceInput', {label: 'Wartungskosten', model: 'invoice', attr: 'wartung', value: @invoice.wartung}) %>
    <%= react_component('PriceInput', {label: 'Reinigungskosten', model: 'invoice', attr: 'renigung', value: @invoice.reinigung}) %>

    <hr/>

    <div class="form-group strompreis">
      <%= f.label :strompreis, 'Strompreis', class: 'col-sm-2 control-label' %>
      <div class="input-group col-sm-2">
        <%= f.text_field :strompreis, class: 'form-control', placeholder: 'Gesamtpreis' %>
        <span class="input-group-addon">€</span>
      </div>
      <div class="input-group col-sm-2">
        <%= f.text_field :stromverbrauch, class: 'form-control', placeholder: 'Gesamtverbrauch' %>
        <span class="input-group-addon">€</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :gesamt_strom, 'Strompreis (brutto)', class: 'col-sm-2 control-label' %>
      <div class="input-group col-sm-2">
        <%= f.text_field :gesamt_strom, class: 'form-control', readonly: true %> <!-- Gesamtpreis / Gesamtverbrauch -->
        <span class="input-group-addon">€</span>
      </div>
    </div>

    <hr/>

    <%= react_component('PriceInput', {label: 'Wasser', model: 'invoice', attr: 'wasser', value: @invoice.wasser}) %>
    <%= react_component('PriceInput', {label: 'Abwasser', model: 'invoice', attr: 'abwasser', value: @invoice.abwasser}) %>

    <hr/>

    <%= react_component('PriceInput', {label: 'Niederschlagswasser', model: 'invoice', attr: 'niederschlag', value: @invoice.niederschlag}) %>
    <%= react_component('PriceInput', {label: 'Abfallgebühren', model: 'invoice', attr: 'abfall', value: @invoice.abfall}) %>
    <%= react_component('PriceInput', {label: 'Grundsteuer Garten', model: 'invoice', attr: 'grundsteuer', value: @invoice.grundsteuer}) %>
    <%= react_component('PriceInput', {label: 'Versicherung', model: 'invoice', attr: 'versicherung', value: @invoice.versicherung}) %>

    <%= f.submit 'Speichern', class: 'btn btn-primary' %>

<% end %>